{
    "name": "svelte-spa-template",
    "version": "1.0.2",
    "main": "src/index.ts",
    "license": "MIT",
    "scripts": {
        "start": "npm run clean && ts-node ./config/parcel.config.ts --serve --http-port 8080 --https-port 8443",
        "build": "npm run clean && ts-node ./config/parcel.config.ts --build",
        "watch": "npm run clean && ts-node ./config/parcel.config.ts --watch",
        "clean": "rm -rf ./dist/*.*",
        "production": "node ./production-ts/config/parcel.config.js --product-serve --http-port 80 --https-port 442",
        "production-build": "npm run production-clean && tsc && ts-node ./config/parcel.config.ts --product-build",
        "production-clean": "rm -rf ./production/*.* && rm -rf ./production-ts/*.*",
        "postinstall": "rm -rf ./.cache && node ./postinstall.ts",
        "lint": "prettier --write ./src/**/*.{ts,js,css,html,svelte}"
    },
    "dependencies": {
        "autoprefixer": "^9.7.3",
        "axios": "^0.28.0",
        "cookie-storage": "^5.0.3",
        "core-js": "^3.6.1",
        "cors": "^2.8.5",
        "express": "^4.21.0",
        "folder-logger": "^1.0.7",
        "nested-static": "^1.1.0",
        "node-sass": "^7.0.3",
        "parcel-bundler": "^1.12.4",
        "parcel-plugin-svelte": "^4.0.5",
        "postcss": "^8.4.31",
        "postcss-load-config": "^2.1.0",
        "public-ip": "^4.0.0",
        "regenerator-runtime": "^0.13.3",
        "src": "^1.1.2",
        "svelma": "^0.3.0",
        "svelte": "^3.49.0",
        "svelte-css-in-js": "^1.0.3",
        "svelte-preprocess": "^3.3.0",
        "svelte-preprocess-sass": "^0.2.0",
        "svelte-reusable": "^3.0.8",
        "svelte-spa-chunk": "^1.0.1",
        "svelte-spa-router": "^2.0.0",
        "svelte-ts-preprocess": "^1.1.3",
        "ts-node": "^8.5.4",
        "tslib": "^1.10.0",
        "typescript": "^3.7.4",
        "yargs": "^15.4.1"
    },
    "devDependencies": {
        "@pyoner/svelte-ts-preprocess": "^1.2.1",
        "@types/express": "^4.17.2",
        "@types/node": "^13.1.2",
        "parcel-plugin-typescript-paths": "^0.1.14",
        "prettier": "^1.19.1",
        "prettier-plugin-svelte": "^0.7.0"
    },
    "browserslist": [
        "cover 99.5%"
    ],
    "description": "> Svelte + Typescript + Parcel + Express"
}
